[DEFAULTS]
ifmap_server_ip=<%= contrail_config_ip %>
ifmap_server_port=<%= contrail_ifmap_server_port %>
ifmap_username=svc-monitor
ifmap_password=svc-monitor
api_server_ip=<%= contrail_config_ip %>
api_server_port=8082
zk_server_ip=<%= contrail_zookeeper_ip_list.map{ |ip| "#{ip}:#{@contrail_zk_ip_port}" }.join(',') %>
log_file=/var/log/contrail/contrail-svc-monitor.log
cassandra_server_list=<%= contrail_cassandra_ip_list.map{ |ip| "#{ip}:#{@contrail_cassandra_ip_port}" }.join(' ') %>
disc_server_ip=<%= contrail_config_ip %>
disc_server_port=5998
region_name=<%= contrail_region_name %>
log_level=SYS_NOTICE
log_local=1

[SECURITY]
use_certs=<%= contrail_use_certs %>
keyfile=/etc/contrail/ssl/private_keys/svc_monitor_key.pem
certfile=/etc/contrail/ssl/certs/svc_monitor.pem
ca_certs=/etc/contrail/ssl/certs/ca.pem

[KEYSTONE]
auth_host=<%= contrail_keystone_ip %>
admin_user=<%= contrail_ks_admin_user %>
admin_password=<%= contrail_ks_admin_passwd %>
admin_tenant_name=<%= contrail_ks_admin_tenant %>
admin_token=<%= contrail_service_token %>
