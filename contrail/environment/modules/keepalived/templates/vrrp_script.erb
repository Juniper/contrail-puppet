vrrp_script <%= @name %> {
  script    "<%= @script %>"
  interval  <%= @interval %>
  <%- unless @no_weight -%>
  weight    <%= @weight %>
  <%- end -%>
  <%- if @timeout-%>
  timeout      <%= @timeout%>
  <%- end -%>
  <%- if @fall -%>
  fall      <%= @fall %>
  <%- end -%>
  <%- if @rise -%>
  rise      <%= @rise %>
  <%- end -%>
}

